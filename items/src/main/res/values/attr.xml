<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BaseItem">
        <attr name="xy_icon" format="reference" />
        <attr name="xy_text" format="string" />
        <attr name="xy_textColor" format="color" />
        <attr name="xy_textSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SubtextItem">
        <attr name="xy_subtext" format="string" />
        <attr name="xy_subtextSize" format="dimension" />
        <attr name="xy_subtextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ClickItem">
        <attr name="xy_clickIcon" format="reference" />
        <attr name="xy_clickIcon_width" format="dimension" />
        <attr name="xy_clickIcon_height" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SwitchItem">
        <attr name="xy_checked" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ItemGroup">
        <attr name="xy_divider" format="reference" />
        <attr name="xy_divider_paddingLeft" format="dimension" />
    </declare-styleable>

    <declare-styleable name="EditItem">
        <attr name="xy_edit_hint" format="string" />
        <attr name="xy_edit_textSize" format="dimension" />
        <attr name="xy_edit_text" format="string" />
        <attr name="xy_edit_textColor" format="color" />
        <attr name="xy_edit_width" format="dimension" />
        <attr name="xy_edit_height" format="dimension" />
        <attr name="xy_edit_gravity" format="enum">
            <enum name="START" value="0" />
            <enum name="CENTER" value="1" />
            <enum name="END" value="2" />
        </attr>
        <attr name="xy_edit_maxLength" format="integer" />
        <attr name="xy_edit_toolIcon_width" format="dimension" />
        <attr name="xy_edit_toolIcon_height" format="dimension" />
        <attr name="xy_edit_toolIcon" format="reference" />
    </declare-styleable>

    <declare-styleable name="PwdEditItem">
        <attr name="xy_pwd_visible" format="boolean" />
    </declare-styleable>
</resources>